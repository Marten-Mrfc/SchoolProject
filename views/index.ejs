  value = 9;
  color = '#bbdb44';
} else if (totalSo === 0 && totalPw === 0 && totalMo === 2) {
  value = 5.5;
  color = '#f7e379';
} else if (totalSo === 1 && totalPw === 0 && totalMo === 2) {
  value = 1;
  color = '#e51f1f';
} else if (totalSo === 0 && totalPw === 1 && totalMo === 2) {
  value = 8;
  color = '#ff0000';
} else if (totalSo === 2 && totalPw === 0 && totalMo === 2) {
} else if (totalSo === 4 && totalPw === 0) {
  value = 1;
  color = '#e51f1f';
} else if (totalSo === 5 && totalPw === 0) {
  value = 1;
  color = '#ff0000';
} else if (totalSo === 0 && totalPw === 1) {
  value = 8;
  color = '#bbdb44';
} else if (totalSo === 0 && totalPw === 2) {
  value = 5.5;
  color = '#f2a134';
} else if (totalSo === 0 && totalPw === 3) {
  value = 1;
  color = '#ff0000';
} else if (totalSo === 1 && totalPw === 1) {
  value = 8;
  color = '#f7e379';
} else if (totalSo === 2 && totalPw === 1) {
  value = 5.5;
  color = '#f2a134';
